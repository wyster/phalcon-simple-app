{
    "require": {
        "phalcon/incubator": "^3.4",
        "datto/json-rpc": "^6.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phalcon/devtools": "^3.4",
        "phalcon/ide-stubs": "^3.4",
        "phpunit/phpunit": "^7",
        "mockery/mockery": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "app\\": "app"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "app\\test\\": "tests"
        }
    },
    "scripts": {
        "serve:debug": "php -d xdebug.remote_enable=1 -d xdebug.remote_connect_back=1 -S 0.0.0.0:8000 -t public .htrouter.php"
    }
}
